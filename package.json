{
  "name": "gts-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:cms": "pnpm --filter cms dev",
    "dev": "pnpm -r --parallel dev",
    "build:web": "pnpm --filter web build",
    "build:cms": "pnpm --filter cms build",
    "build": "pnpm build:web && pnpm build:cms",
    "start:web": "pnpm --filter web start",
    "start:cms": "pnpm --filter cms start",
    "lint": "pnpm --filter web lint",
    "typecheck": "pnpm --filter web typecheck && pnpm --filter cms typecheck",
    "db:generate": "pnpm --filter web db:generate",
    "db:migrate": "pnpm --filter web db:migrate",
    "db:seed": "pnpm --filter web db:seed",
    "test": "pnpm --filter web test",
    "test:watch": "pnpm --filter web test:watch",
    "test:e2e": "pnpm --filter web test:e2e",
    "cms:generate:types": "pnpm --filter cms generate:types"
  },
  "devDependencies": {
    "typescript": "^5",
    "patch-package": "^8.0.0"
  },
  "dependencies": {}
}
